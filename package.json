{
  "name": "vdt-mcp",
  "version": "0.1.0",
  "description": "Visual Debugging Tool - MCP Server for debugging workflows",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "vdt-mcp": "dist/bin.js"
  },
